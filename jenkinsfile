pipeline {
    agent any

    stages {
        stage('Copying dir from git to ubuntu instance') {
            steps {
                sh '''
                scp -r /var/lib/jenkins/workspace/FashionBlog /var/www/html/website
                '''
            }
        }
        stage('Restarting web server') {
            steps {
                sh '''
                sudo systemctl restart apache2
                '''
            }
        }
    }
}
